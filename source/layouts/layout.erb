<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title %></title>
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
    <link rel="stylesheet" type="text/css" href="https://unpkg.com/tachyons@4.11.1/css/tachyons.min.css" />
  </head>

  <body class="<%= page_classes %>">
    <div class="debug mw9 center ph3-ns">

      <header>
        <div class="fl w-100 w-20-ns pa3">
          <h1 class="f2 lh-title">
            <%= link_to("Jill Petersen", "index.html") %></h1>
        </div>

        <div class="fl w-100 w-80-ns pa3">
          <h1 class="f2 lh-title">
            <%= link_to("Design", "design.html") %>
            /
            <%= link_to("Research", "research.html") %>
          </h1>
        </div>
      </header>

      <%= yield %>
    </div>
  </body>
</html>
